# Database - Supabase PostgreSQL
DATABASE_URL="postgresql://user:password@localhost:5432/noteplanning"
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_KEY="your-supabase-anon-key"
SUPABASE_JWT_SECRET="your-supabase-jwt-secret"

# Server Configuration
PORT=3000
NODE_ENV=development
HOST=0.0.0.0

# JWT Configuration (legacy - será removido após migração completa)
JWT_SECRET="your-jwt-secret-at-least-32-characters-long"
JWT_EXPIRES_IN="7d"

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN="*"

# File Upload
UPLOAD_PATH="./uploads"
MAX_FILE_SIZE=10485760

# Pagination
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# External Services
ABACATEPAY_TOKEN_SECRET="your-abacatepay-token-secret"
RESEND_API_KEY="your-resend-api-key"

# Firebase Configuration (opcional para Firebase Functions)
FIREBASE_API_KEY="your-firebase-api-key"
FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
FIREBASE_PROJECT_ID="your-project-id"
FIREBASE_STORAGE_BUCKET="your-project.appspot.com"
FIREBASE_MESSAGING_SENDER_ID="123456789"
FIREBASE_APP_ID="1:123456789:web:abcdef"
FIREBASE_MEASUREMENT_ID="G-XXXXXXXXXX"
